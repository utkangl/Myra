<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:ignore="HardcodedText">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedModeAsTitle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/timeIntervalsScrollContainer"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:text="ASK">
    </TextView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/selectModeContainer"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/timeIntervalsScrollContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">
                </ImageView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/selectModeContainer"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:gravity="center_vertical">
        
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/generalModeCard"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/generalModeImage"
                android:src="@drawable/cancel_icon"
                android:background="@drawable/fav_card_background"
                android:contentDescription="love mode card's background image">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/loveModeCard"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loveModeImage"
                android:src="@drawable/cancel_icon"
                android:background="@drawable/fav_card_background"
                android:contentDescription="love mode card's background image">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/CareerModeCard"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/CareerModeImage"
                android:src="@drawable/cancel_icon"
                android:background="@drawable/fav_card_background"
                android:contentDescription="love mode card's background image">
            </ImageView>
        </androidx.cardview.widget.CardView>

            
        
        
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selectModeContainer"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/lookupUsersScrollContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_user_icon"
                    android:background="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_card_background"
                    android:contentDescription="time interval card background">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="205dp"
        android:layout_height="60dp"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fav_card_background"
            android:contentDescription="get horoscope button background image">
        </ImageView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>