<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment"
    android:background="@color/black"
    tools:ignore="ContentDescription">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chatFragmentMessageInputText"
        android:layout_marginBottom="10dp"
        android:id="@+id/chatFragmentContainer">

        <ListView
            android:id="@+id/chatListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/white"
            android:dividerHeight="0dp"
            android:stackFromBottom="true"
            android:transcriptMode="normal">
        </ListView>

    </RelativeLayout>

    <EditText
        android:id="@+id/chatFragmentMessageInputText"
        android:layout_width="333dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/chat_input_back_ground"
        android:drawablePadding="10dp"
        android:fontFamily="@font/arima_madurai_light"
        android:hint="Message to Mira"
        android:inputType="textImeMultiLine"
        android:paddingStart="20dp"
        android:paddingEnd="35dp"
        android:text=""

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        android:textSize="24sp"

        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/cancelUserMessage"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/sendUserMessage"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/cancel_icon"
        android:background="@color/black"
        android:visibility="invisible"
        tools:ignore="VisualLintBounds">
    </ImageButton>

    <ImageButton
        android:id="@+id/sendUserMessage"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@id/chatFragmentMessageInputText"
        android:background="@color/black"
        android:padding="4dp"
        android:src="@drawable/send_icon"
        android:visibility="visible"
        tools:ignore="SpeakableTextPresentCheck">
    </ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:id="@+id/annen">
    </RelativeLayout>
</RelativeLayout>