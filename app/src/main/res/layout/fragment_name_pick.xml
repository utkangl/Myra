<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NamePickFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/empty">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/namepickfragmentstep1of6"

        android:layout_marginTop="30dp"

        android:layout_centerHorizontal="true"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Step 1 of 6"
        android:textColor="@color/white"
        android:textSize="20sp">

    </TextView>



    <com.example.falci.StarShape
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_above="@+id/namepickfragmenttitle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        >

    </com.example.falci.StarShape>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/namepickfragmenttitle"

        android:layout_above="@+id/namepickfragmentnameinput"
        android:layout_marginBottom="120dp"

        android:layout_centerHorizontal="true"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Isminiz ile Baslayalim"
        android:textColor="@color/white"
        android:textSize="32sp">

    </TextView>

    <androidx.cardview.widget.CardView

        android:id="@+id/namepickfragmentnameinput"

        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:layout_centerVertical="true"

        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"

        app:cardCornerRadius="25dp">

        <EditText
            android:id="@+id/namepickfragmentnameinputtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nameinputbackground"
            android:drawableLeft="@drawable/write_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/arima_madurai_light"
            android:paddingLeft="10dp"
            android:hint="Isminiz"
            android:text = ""
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:id="@+id/namepickfragmentnextbutton"

        android:layout_below="@+id/namepickfragmentnameinput"
        android:layout_marginTop="100dp"


        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"

        android:background="@drawable/nextbuttonbackground"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Devam"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>