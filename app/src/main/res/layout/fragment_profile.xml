<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@drawable/gradient_background"
    tools:ignore="ContentDescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profilecard"
        android:layout_marginBottom="10dp"
        android:id="@+id/profileTitle"
        android:fontFamily="@font/arima_madurai_bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Profile"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:id="@+id/profilecard"

        android:layout_above="@+id/zodiaccard"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="40dp"

        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"

        app:cardBackgroundColor="#242854"
        app:cardCornerRadius="15dp"
        tools:targetApi="p">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/profilephotocard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="50dp"
                tools:ignore="TextSizeCheck">

                <ImageView
                    android:id="@+id/profilephoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="#6B66CF"
                    tools:ignore="ImageContrastCheck">
                </ImageView>

                <TextView
                    android:id="@+id/profileFragmentFirstLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:contentDescription="profile name first letter"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:paddingTop="8dp"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    tools:ignore="HardcodedText">

                </TextView>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileFragmentName"

                android:layout_toEndOf="@+id/profilephotocard"
                android:layout_marginTop="35dp"
                android:layout_marginStart="20dp"

                android:text="Doga"
                android:textSize="24sp"
                android:fontFamily="@font/arima_madurai_bold"
                android:textColor="@color/white"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileCardZodiacName"

                android:layout_toEndOf="@+id/profilephotocard"
                android:layout_marginTop="85dp"
                android:layout_marginStart="20dp"

                android:text="Ikizler"
                android:textSize="20sp"
                android:fontFamily="@font/arima_madurai_light"
                android:textColor="@color/white"

                tools:ignore="HardcodedText">
            </TextView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilefragmenteditprofilebutton"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/editprofile"

                android:fontFamily="@font/arima_madurai_light"
                android:text="Profilini Düzenle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:ignore="HardcodedText,TextSizeCheck">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/zodiaccard"
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#242854"
        app:cardCornerRadius="15dp"
        tools:ignore="TextSizeCheck"
        tools:targetApi="p">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/horizontalscrollview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="VisualLintBounds">

                    <RelativeLayout
                        android:id="@+id/scrollViewJupyterLayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="jupiter image"
                            android:src="@drawable/jupiter"
                            tools:ignore="HardcodedText,ImageContrastCheck">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Jupiter"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/marslayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/mars">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Mars"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/mercurylayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"
                        tools:ignore="VisualLintBounds">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/mercury">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Mercury"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/neptuneLayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/neptune">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Neptune"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/saturnlayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/saturn">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Saturn"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:id="@+id/sunlayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/sun">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="60dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Sun"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/uranuslayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/uranus">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Uranus"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:id="@+id/venuslayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/venus">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Venus"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white">

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/moonlayout"
                        android:layout_width="115dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/moon">
                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            android:fontFamily="@font/arima_madurai_light"
                            android:gravity="center_vertical"
                            android:text="Moon"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText">
                        </TextView>

                    </RelativeLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scrollViewSeparator"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_below="@+id/horizontalscrollview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/separator_line"
                app:cardBackgroundColor="@color/white">
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/zodiacexplanationcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/scrollViewSeparator">

<!--             zodiac image-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/planet_horoscope_image_card"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="25dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/planet_horoscope_image"
                        android:src="@drawable/gemini">
                    </ImageView>
                </androidx.cardview.widget.CardView>

<!--             zodiac name-->
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/planet_horoscope_text"
                    android:layout_below="@+id/planet_horoscope_image_card"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText">
                </TextView>

<!--             planet image-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/burcexplanationplanet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"

                    app:cardBackgroundColor="#242854"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:id="@+id/burcexplanationplanetimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/moon">
                    </ImageView>

                </androidx.cardview.widget.CardView>

<!--             planet name-->
                <TextView
                    android:id="@+id/burcexplanationplanettext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@+id/burcexplanationplanet"

                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="PLANET"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText">

                </TextView>

<!--             explanation text-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/burcExplanationTextScroll"
                    android:layout_below="@id/burcexplanationplanet"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/burcExplanationText"
                        android:fontFamily="@font/arima_madurai_light"
                        android:text="En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol.En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol.En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol.En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol En doğru burç yorumunu sana vermemiz için bilgilerini doğru girdiğinden emin ol. "
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText">
                    </TextView>
                </ScrollView>

<!--             back button( visible only when card is open)-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/backArrowCard"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#47386F"
                    app:cardCornerRadius="75dp">

                    <ImageButton
                        android:id="@+id/back_arrow"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/back_arrow"
                        tools:ignore="VisualLintBounds">
                    </ImageButton>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileViewBottomCard"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/zodiaccard"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#242854"
        app:cardCornerRadius="15dp"
        tools:ignore="TextSizeCheck"
        tools:targetApi="p">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomcardseperator"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/white">

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/bottomcardseperator"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/white_star_icon">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomcardseperator"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:gravity="center"
                android:text="Favori Burcların"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bottomcardseperator"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_currency_bitcoin_24">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottomcardseperator"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:gravity="center"
                android:text="Coin Satin Al"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText">
            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:background="@drawable/common_next_button"
        android:id="@+id/logoutButton"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Cikis Yap"
        android:textSize="17sp"
        android:fontFamily="@font/arima_madurai_bold"
