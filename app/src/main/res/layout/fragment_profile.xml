                    android:id="@+id/planet_horoscope_image_card"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="25dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/planet_horoscope_image"
                        android:src="@drawable/gemini">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <!--             zodiac name-->
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/planet_horoscope_text"
                    android:layout_below="@+id/planet_horoscope_image_card"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    >
                </TextView>

                <!--             planet image-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/burcexplanationplanet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"

                    app:cardBackgroundColor="#242854"
                    app:cardCornerRadius="35dp">

                    <ImageView
                        android:id="@+id/burcexplanationplanetimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/moon">
                    </ImageView>

                </androidx.cardview.widget.CardView>

                <!--             planet name-->
                <TextView
                    android:id="@+id/burcexplanationplanettext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@+id/burcexplanationplanet"

                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/planet"
                    android:textColor="@color/white"
                    android:textSize="25dp">

                </TextView>

                <!--             explanation text-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/burcExplanationTextScroll"
                    android:layout_below="@id/burcexplanationplanet"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/burcExplanationText"
                        android:fontFamily="@font/arima_madurai_light"
                        android:text="@string/en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol_en_do_ru_bur_yorumunu_sana_vermemiz_i_in_bilgilerini_do_ru_girdi_inden_emin_ol"
                        android:textColor="@color/white"
                        android:textSize="15dp">
                    </TextView>
                </ScrollView>

                <!--             back button( visible only when card is open)-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/backArrowCard"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#47386F"
                    app:cardCornerRadius="75dp">
                    <ImageButton
                        android:id="@+id/back_arrow"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/back_arrow"
                        tools:ignore="VisualLintBounds">
                    </ImageButton>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileViewBottomCard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/zodiaccard"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#242854"
        app:cardCornerRadius="15dp"
        tools:ignore="TextSizeCheck"
        tools:targetApi="p">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomcardseperator1"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_below="@+id/showFavHoroscopesLayout"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/white">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomcardseperator2"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_below="@+id/navigateToSettingsContainerLayout"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/white">
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/showFavHoroscopesLayout"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
