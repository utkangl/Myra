<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment"
    android:background="@drawable/falci_background"
    tools:ignore="UnusedAttribute, SpUsage">



    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/signupBackButton"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="44dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/sample_description"
        android:background="@drawable/baseline_arrow_back_24"
        android:elevation="15dp">
    </ImageButton>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:id="@+id/loginMenuMira"

        android:src="@drawable/character"

        android:layout_above="@+id/loginFragmentTitleTextview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        tools:ignore="ContentDescription">
    </ImageView>

    <TextView
        android:id="@+id/loginFragmentTitleTextview"

        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_above="@+id/signUpFragmentUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:textSize="32dp"
        tools:ignore="TextSizeCheck">

    </TextView>


    <EditText
        android:id="@+id/signUpFragmentUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:autofillHints="emailAddress"
        android:fontFamily="@font/arima_madurai_light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/quantum_grey"
        tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck">
    </EditText>


    <EditText
        android:id="@+id/signUpFragmentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpFragmentUsername"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"

        android:fontFamily="@font/arima_madurai_light"
        android:autofillHints="password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/quantum_grey"
        tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck">
    </EditText>

    <EditText
        android:id="@+id/signUpFragmentPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpFragmentPassword"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/arima_madurai_light"
        android:autofillHints="password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/quantum_grey"
        tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupfragmentsignupbutton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/signUpFragmentPasswordAgain"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="75dp"
        android:elevation="-15dp"
        android:background="@drawable/common_next_button"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="@string/signup"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:ignore="VisualLintButtonSize,TextSizeCheck">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/kvkkPopupCard"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        android:layout_marginBottom="120dp"
        android:elevation="18dp"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/kvkkContainerLayout">

            <ScrollView
                android:id="@+id/kvkkPopupScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="18dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="95dp">
                <TextView
                    android:id="@+id/kvkkPopUpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="18dp"
                    android:fontFamily="@font/arima_madurai_light"
                    android:text="@string/sample_long_text"
                    android:textColor="@color/white"
                    android:textSize="15dp">
                </TextView>
            </ScrollView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/acceptKvkkButton"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/nextbuttonbackground"
                android:text="@string/accept_kvkk"
                android:fontFamily="@font/arima_madurai_light"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:maxLines="1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp"
                android:layout_centerHorizontal="true">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>
        <!--kvkk text-->

    </androidx.cardview.widget.CardView>
    
</RelativeLayout>