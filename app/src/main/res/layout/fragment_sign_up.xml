<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment"
    android:background="@drawable/falci_background"
    tools:ignore="UnusedAttribute, SpUsage">


        <TextView
            android:id="@+id/loginFragmentTitleTextview"

            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_above="@+id/signUpFragmentUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"

            android:fontFamily="@font/arima_madurai_bold"
            android:text="Bilgilerinizi Girin Lutfen"
            android:textColor="@color/white"
            android:textSize="32dp"
            tools:ignore="HardcodedText,TextSizeCheck">

        </TextView>


        <androidx.cardview.widget.CardView
            android:id="@+id/signUpFragmentUsername"

            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:layout_above="@id/signUpFragmentPassword"
            android:layout_marginBottom="20dp"

            app:cardElevation="8dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"

            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"

            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/signUpFragmentUsernameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="emailAddress"
                android:background="@drawable/common_text_input_field"
                android:fontFamily="@font/arima_madurai_light"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="255"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="24dp"
                tools:ignore="HardcodedText,VisualLintTextFieldSize,TextSizeCheck" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/signUpFragmentPassword"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            app:cardElevation="8dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/signUpFragmentPasswordText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:background="@drawable/common_text_input_field"
                android:fontFamily="@font/arima_madurai_light"
                android:hint="Sifre"
                android:inputType="textPassword"
                android:maxLength="255"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="24dp"
                tools:ignore="HardcodedText,VisualLintTextFieldSize,TextSizeCheck" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/signUpFragmentPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/signUpFragmentPassword"
            app:cardElevation="8dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/signUpFragmentPasswordAgainText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:background="@drawable/common_text_input_field"
                android:fontFamily="@font/arima_madurai_light"
                android:hint="Tekrardan Sifre"
                android:inputType="textPassword"
                android:maxLength="255"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="24dp"
                tools:ignore="HardcodedText,VisualLintTextFieldSize,TextSizeCheck" />
        </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupfragmentsignupbutton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/signUpFragmentPasswordAgain"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/common_next_button"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="Kayit Ol"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:ignore="HardcodedText,VisualLintButtonSize,TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>
</RelativeLayout>