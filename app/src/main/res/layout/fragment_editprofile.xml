<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbackground"
    tools:context=".EditProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/backarrowcard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="75dp"
        app:cardBackgroundColor="#47386F"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editprofiletitle"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="25dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:background="@drawable/back_arrow"
            android:layout_gravity="center"
            android:layout_marginStart="12dp">
        </ImageButton>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editprofiletitle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/namefieldhint"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:text="Profilini Duzenle">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namefieldhint"
        android:layout_above="@id/nameedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-15dp"
        android:text="Adin"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:id="@+id/nameedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/genderedittext"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:textColor="@color/white">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/genderedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-15dp"
        android:text="Cinsiyet"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genderedittext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_above="@+id/birthdateedittext"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/birthdateedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-15dp"
        android:text="Dogum Tarihi"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/birthdateedittext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_above="@+id/birthtimeedittext"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/birthtimeedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-15dp"
        android:text="Dogum Saati"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:id="@+id/birthtimeedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:textColor="@color/white">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/locationedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-55dp"
        android:text="Dogum Yeri"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationedittext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/birthtimeedittext"
        android:layout_marginTop="40dp"
        android:textColor="@color/white">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/occupationedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-55dp"
        android:text="Is"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/occupationedittext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/locationedittext"
        android:layout_marginTop="40dp"
        android:textColor="@color/white">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/relationshipstatusedittext"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="-55dp"
        android:text="Iliski Durumu"
        android:fontFamily="@font/arima_madurai_light"
        android:textColor="@color/quantum_grey"
        android:textSize="18sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relationshipstatusedittext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/occupationedittext"
        android:layout_marginTop="40dp"
        android:textColor="@color/white">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/savebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:background="@drawable/save_icon"
        android:visibility="invisible">
    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>