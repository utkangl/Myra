<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PurchaseFragment"
    android:background="@drawable/space_background"
    tools:ignore="SpUsage">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/settings_screen_topImage"
        android:background="#5b54b1"
        android:contentDescription="@string/settings_screen_top_banner">
    </ImageView>

    <TextView
        android:id="@+id/purchases_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:gravity="center"
        android:text="@string/in_app_products"
        android:textColor="@color/white"
        android:textSize="35dp"
        tools:ignore="TextSizeCheck">
    </TextView>


    <TextView
        android:id="@+id/OneTimePurchasesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_screen_topImage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:maxLines="1"
        android:text="@string/one_time_purchases"
        android:textColor="@color/white"
        android:textSize="27dp"
        tools:ignore="TextSizeCheck">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/fiveCoin_cardView"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#784B84"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_below="@id/OneTimePurchasesTitle"
        android:focusable="true">

        <TextView
            android:id="@+id/fiveCoin_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/buy_5_coins"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/fiveCoin_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:src="@drawable/seperator_line_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fiveCoin_cardView"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/seperatorline">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/twentyFiveCoin_cardView"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="12dp"
        android:layout_below="@id/fiveCoin_cardView"
        app:cardBackgroundColor="#784B84"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/twentyFiveCoin_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/buy_25_coins"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/twentyFiveCoin_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
        
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:src="@drawable/seperator_line_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/twentyFiveCoin_cardView"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/seperatorline">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fiftyCoin_cardView"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/twentyFiveCoin_cardView"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="#784B84"
        app:cardCornerRadius="12dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/fiftyCoin_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/buy_50_coins"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/fiftyCoin_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:src="@drawable/seperator_line_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fiftyCoin_cardView"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/seperatorline">
    </ImageView>

    <TextView
        android:id="@+id/SubscriptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiftyCoin_cardView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:maxLines="1"
        android:text="@string/subscriptions"
        android:textColor="@color/white"
        android:textSize="27dp"
        tools:ignore="TextSizeCheck">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/weeklySubs_cardView"
        app:cardBackgroundColor="#784B84"
        app:cardCornerRadius="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SubscriptionsTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/weeklySubs_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/subscribe_weekly"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/weeklySubs_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:src="@drawable/seperator_line_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weeklySubs_cardView"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/seperatorline">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/monthlySubs_cardView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weeklySubs_cardView"
        app:cardBackgroundColor="#784B84"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/monthlySubs_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/subscribe_monthly"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/monthlySubs_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:src="@drawable/seperator_line_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/monthlySubs_cardView"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/seperatorline">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/yearlySubs_cardView"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#784B84"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/monthlySubs_cardView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/yearlySubs_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/mira_coin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/subscribe_yearly"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>

        <TextView
            android:id="@+id/yearlySubs_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/sample_price_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck">
        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/purchaseLoadingAnimationContainer"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#CCffffff"
        android:elevation="5dp"
        app:cardCornerRadius="45dp"
        android:visibility="invisible">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_height="85dp"
            android:layout_width="85dp"
            android:id="@+id/purchaseLoadingAnimation"
            android:layout_gravity="center"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/purchase_loading"
            tools:layout_editor_absoluteY="0dp"
            android:visibility="invisible">
        </com.airbnb.lottie.LottieAnimationView>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:id="@+id/purchaseSuccessfullAnimation"
            android:layout_gravity="center"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/purchase_successfull"
            tools:layout_editor_absoluteY="0dp"
            android:visibility="invisible">
        </com.airbnb.lottie.LottieAnimationView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>