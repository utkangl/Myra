<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirthTimePickFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/empty">
    </TextView>


    <TextView
        android:id="@+id/birthtimepickfragmentstep4of7"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Step 4 of 7"
        android:textColor="@color/white"
        android:textSize="20sp">

    </TextView>

    <com.example.falci.StarShape
        android:id="@+id/star1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toLeftOf="@+id/star2"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:id="@+id/star2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toLeftOf="@+id/star3"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/star3"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toLeftOf="@+id/empty"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:id="@+id/star4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toRightOf="@+id/empty"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:id="@+id/star5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toRightOf="@+id/star4"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:id="@+id/star6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toRightOf="@+id/star5"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>

    <com.example.falci.StarShape
        android:id="@+id/star7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/birthtimepickfragmenttitle"
        android:layout_toRightOf="@+id/star6"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp">
    </com.example.falci.StarShape>


    <TextView
        android:id="@+id/birthtimepickfragmenttitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_above="@+id/timepicker"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="82.5dp"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Dagum Saatinizi Seciniz"
        android:textColor="@color/white"
        android:textSize="32sp">

    </TextView>

    <TimePicker

        android:id="@+id/timepicker"

        android:layout_width="wrap_content"
        android:layout_height="150dp"

        android:layout_centerInParent="true"
        android:timePickerMode="spinner">

    </TimePicker>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/timepickfragmentnextbutton"
        android:layout_width="match_parent"

        android:layout_height="75dp"

        android:layout_below="@+id/timepicker"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="75dp"

        android:background="@drawable/common_next_button"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Devam"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>