<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderPickFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/genderpickfragmentstep2of6"

        android:layout_marginTop="30dp"

        android:layout_centerHorizontal="true"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Step 2 of 6"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText">

    </TextView>



    <Spinner
        android:id="@+id/genderpick_spinner"

        android:layout_width="250dp"
        android:layout_height="50dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@drawable/nameinputbackground"

        android:textAlignment="center"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:id="@+id/genderpickfragmentnextbutton"

        android:layout_below="@+id/genderpick_spinner"
        android:layout_marginTop="100dp"


        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"

        android:background="@drawable/nextbuttonbackground"

        android:fontFamily="@font/arima_madurai_bold"
        android:text="Devam"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAllCaps="false"
        tools:ignore="HardcodedText">

    </androidx.appcompat.widget.AppCompatButton>




</RelativeLayout>