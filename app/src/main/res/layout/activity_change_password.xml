<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="@drawable/falci_background"
    tools:ignore="UnusedAttribute, SpUsage">

    <TextView
        android:id="@+id/changePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="@string/change_password"
        android:textColor="@color/white"
        android:textSize="32dp"
        tools:ignore="TextSizeCheck">
    </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/changePasswordTitle"
        android:layout_above="@+id/changePasswordNewPasswordCard">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/digitsLinearContainer"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <EditText
                    android:id="@+id/firstDigit"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secondDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:id="@+id/secondDigit"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@null"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thirdDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:id="@+id/thirdDigit"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@null"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forthDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:id="@+id/forthDigit"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@null"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fifthDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:id="@+id/fifthDigit"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@null"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sixthDigitCard"
                app:cardBackgroundColor="#C1C1C1"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:id="@+id/sixthDigit"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:textSize="30dp"
                    android:autofillHints="password"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@null"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck">
                </EditText>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:maxWidth="220dp"
            android:id="@+id/sendVerificationCodeButton"
            android:background="@drawable/get_horoscope_button_background"
            android:layout_above="@+id/digitsLinearContainer"
            android:layout_marginBottom="50dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/arima_madurai_light"
            android:textSize="17dp"
            android:padding="5dp"
            android:text="@string/send_code"
            android:layout_centerHorizontal="true">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@id/sendVerificationCodeButton"
            android:layout_above="@+id/digitsLinearContainer"
            android:layout_marginBottom="57dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="#242854"
            android:id="@+id/resendEmailChangePassword"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resendEmailImageChangePassword"
                android:src="@drawable/baseline_refresh_24"
                android:layout_gravity="center"
                android:contentDescription="@string/refresh_icon_for_resend_verification_email_card">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resendEmailCountdownTextview"
            android:layout_above="@id/sendVerificationCodeButton"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            tools:ignore="SelectableText">
        </TextView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/takeInfoEmailVerificationChangePassword"
            android:layout_above="@id/digitsLinearContainer"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="63dp"
            android:layout_toStartOf="@id/sendVerificationCodeButton"
            android:background="@drawable/baseline_info_24"
            android:contentDescription="@string/sample_description">
        </ImageView>

    </RelativeLayout>

