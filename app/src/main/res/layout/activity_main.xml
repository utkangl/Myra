<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainActivityGeneralLayout"
    android:background="@drawable/main_menu_background"
    tools:ignore="UnusedAttribute">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/thinkingAnimation"
        android:layout_centerInParent="true"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/thinking_animation"
        tools:layout_editor_absoluteY="0dp"
        android:visibility="gone">
    </com.airbnb.lottie.LottieAnimationView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsButtonCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:elevation="5dp"

        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#1c1444"
        app:cardCornerRadius="30dp"
        app:contentPadding="5dp">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/person_icon"
            android:contentDescription="@string/imagebutton_of_profile"
            tools:ignore="TouchTargetSizeCheck">

        </ImageButton>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/miraMainMenu"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/mira_with_table_on_main_menu"
        android:src="@drawable/mira_main__menu"
        tools:ignore="ImageContrastCheck">

    </ImageView>

    <!--back arrow-->
    <androidx.cardview.widget.CardView
        android:id="@+id/backArrowCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:visibility="invisible"
        app:cardBackgroundColor="#90f1f1f1"
        app:cardCornerRadius="75dp">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/back_arrow_white"
            android:contentDescription="@string/back_arrow_image_button"
            tools:ignore="VisualLintBounds">
        </ImageButton>

    </androidx.cardview.widget.CardView>

    <!--mira image-->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/MiraBurcCardTop"
        android:elevation="6dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/burcCard"
        android:layout_marginBottom="-45dp"
        android:src="@drawable/mira_horoscope_detail_top"
        tools:ignore="NegativeMargin"
        android:contentDescription="@string/main_menu_mira"
        android:visibility="invisible">
    </ImageView>

    <!--triangle -->
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/MiraBurcCardTopTriangle"
        android:layout_above="@id/burcCard"
        android:elevation="7dp"
        android:layout_toStartOf="@+id/MiraBurcCardTop"
        android:src="@drawable/horoscope_detail_card_triangle"
        android:layout_marginEnd="-11dp"
        android:layout_marginBottom="-20dp"
        android:contentDescription="@string/main_menu_mira_triangle"
        android:visibility="invisible">
    </ImageView>

    <!--    burc card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/burcCard"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="#1c1444"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        tools:ignore="TextSizeCheck">

        <!--click to get horoscope-->
        <TextView
            android:id="@+id/ClickToGetHoroscopeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai_light"
            android:text="@string/click_to_get_horoscope"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="VisualLintOverlap"
            android:layout_gravity="center"
            android:visibility="visible">
        </TextView>

        <!--burcCardLayout1-->
        <RelativeLayout
            android:id="@+id/burcCardInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="VisualLintBounds"
            android:visibility="invisible">

            <!--burc explanation text scroll-->
            <ScrollView
                android:id="@+id/burcCardExplanationTextScroll"
                android:layout_width="350dp"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:visibility="visible">
                <!--burc explanation text-->
                <TextView
                    android:id="@+id/burcCardExplanationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/arima_madurai_light"
                    android:padding="10dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_bu_d_nemde_hedeflerinize_odaklanmak_i_in_m_kemmel_bir_zaman_kendinize_g_veniyorsunuz_ve_zorluklar_n_stesinden_gelebilecek_g_ce_sahipsiniz_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_bu_d_nemde_hedeflerinize_odaklanmak_i_in_m_kemmel_bir_zaman_kendinize_g_veniyorsunuz_ve_zorluklar_n_stesinden_gelebilecek_g_ce_sahipsiniz_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_bu_d_nemde_hedeflerinize_odaklanmak_i_in_m_kemmel_bir_zaman_kendinize_g_veniyorsunuz_ve_zorluklar_n_stesinden_gelebilecek_g_ce_sahipsiniz_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_bu_d_nemde_hedeflerinize_odaklanmak_i_in_m_kemmel_bir_zaman_kendinize_g_veniyorsunuz_ve_zorluklar_n_stesinden_gelebilecek_g_ce_sahipsiniz_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_ko_burcu_insanlar_enerji_dolu_ve_liderlik_zelliklerine_sahiptirler_bu_d_nemde_hedeflerinize_odaklanmak_i_in_m_kemmel_bir_zaman_kendinize_g_veniyorsunuz_ve_zorluklar_n_stesinden_gelebilecek_g_ce_sahipsiniz"
                    android:textColor="@color/white"
                    android:textSize="11sp">
                </TextView>
            </ScrollView>

            <!--selected mode title-->
            <TextView
                android:id="@+id/selectedModeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/burcCardExplanationTextScroll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/genel"
                android:textColor="@color/white"
                android:textSize="25sp">
            </TextView>

            <!--general sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/generalSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/loveSign"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/genel"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/generalSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="15dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_general_card"
                        android:contentDescription="@string/general_sign_card_s_image"
                        android:padding="7dp"
                        android:src="@drawable/selected_mode_general_image">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <!--love sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/loveSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/ask"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loveSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="16dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_love_card"
                        android:contentDescription="@string/love_sign_card_s_image"
                        android:padding="9dp"
                        android:src="@drawable/heart">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <!--career sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/careerSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/loveSign"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/career"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/careerSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="15dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_career_card"
                        android:contentDescription="@string/career_sign_card_s_image"
                        android:padding="8dp"
                        android:src="@drawable/selected_mode_career_image">

                    </ImageView>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <!--daily button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalDaily"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/selectedModeTitle"
                android:layout_marginStart="30dp"
                android:layout_marginTop="170dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/timeIntervalDailySelectedBG"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/daily_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalDailyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/gunluk"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--weekly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalWeekly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/selectedModeTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/timeIntervalWeeklySelectedBG"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/weekly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalWeeklyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/haftalik"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--monthly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalMonthly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/timeIntervalDaily"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/timeIntervalMonthlySelectedBG"
                    android:visibility="invisible"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/monthly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalMonthlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/aylik"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--yearly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalYearly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/timeIntervalWeekly"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/timeIntervalYearlySelectedBG"
                    android:visibility="invisible"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/yearly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalYearlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/yillik"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:id="@+id/savedUsersScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeIntervalMonthly"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:scrollbars="none"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/savedUsersLinearContainer"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:id="@+id/addLookupUser"
                        app:cardBackgroundColor="#423E71"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/add_user_icon"
                            android:contentDescription="@string/time_interval_card_add_icon">
                        </ImageView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/addLookupUserBG"
                            android:visibility="invisible"
                            android:background="@drawable/add_lookup_user_card"
                            android:contentDescription="@string/time_interval_card_background"
                            android:src="@drawable/add_user_icon">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!--learn your burc button-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/learnYourBurcButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/timeIntervalMonthly"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="65dp"
                android:background="@drawable/get_horoscope_button_background"
                android:fontFamily="@font/arima_madurai_bold"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/get_your_horoscope"
                android:visibility="invisible">
            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:cardElevation="8dp"
        android:id="@+id/useOrGainCoinMenuCard"
        app:cardBackgroundColor="#C1C1C1"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/useOrGainCoinMenuCardContainerLayout">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/closeUseOrGainCoinMenuCardButton"
                android:background="@drawable/back_arrow"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useOrGainCoinMenuTitle"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arima_madurai_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/horoscopetype_timeinterval">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useOrGainCoinMenuCurrentCoinText"
                android:layout_below="@+id/useOrGainCoinMenuTitle"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arima_madurai_bold"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:text="@string/current_coin"
                android:drawableStart="@drawable/baseline_currency_bitcoin_24">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/UseCoinButton"
                android:background="@drawable/get_horoscope_button_background"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/use_coin"
                android:textAllCaps="false"
                android:gravity="center">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/separatorLine"
                android:layout_below="@+id/UseCoinButton"
                android:layout_marginTop="15dp"
                android:background="@drawable/seperator_line_grey">
            </ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/WatchAdToEarnCoinButton"
                android:background="@drawable/get_horoscope_button_background"
                android:layout_below="@id/separatorLine"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/watch_ad_and_earn_coin"
                android:textAllCaps="false"
                android:gravity="center">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</RelativeLayout>