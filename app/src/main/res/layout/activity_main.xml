<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainActivityGeneralLayout"
    android:background="@drawable/main_menu_background"
    tools:ignore="UnusedAttribute, SpUsage, VisualLintBounds">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/thinkingAnimation"
        android:layout_centerInParent="true"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/thinking_animation"
        tools:layout_editor_absoluteY="0dp"
        android:visibility="gone">
    </com.airbnb.lottie.LottieAnimationView>

    <!--profile button card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsButtonCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:elevation="5dp"

        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#1c1444"
        app:cardCornerRadius="30dp"
        app:contentPadding="5dp">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/person_icon"
            android:contentDescription="@string/imagebutton_of_profile"
            tools:ignore="TouchTargetSizeCheck">

        </ImageButton>

    </androidx.cardview.widget.CardView>

    <!--main myra image-->
    <ImageView
        android:id="@+id/miraMainMenu"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/mira_with_table_on_main_menu"
        android:src="@drawable/mira_main__menu"
        tools:ignore="ImageContrastCheck">

    </ImageView>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/mainActivityBackButton"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="44dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/sample_description"
        android:background="@drawable/baseline_arrow_back_24"
        android:elevation="15dp"
        android:visibility="gone">
    </ImageButton>

    <!--mira image-->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/MiraBurcCardTop"
        android:elevation="6dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/burcCard"
        android:layout_marginBottom="-45dp"
        android:src="@drawable/mira_horoscope_detail_top"
        tools:ignore="NegativeMargin"
        android:contentDescription="@string/main_menu_mira"
        android:visibility="invisible">
    </ImageView>

    <!--triangle -->
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/MiraBurcCardTopTriangle"
        android:layout_above="@id/burcCard"
        android:elevation="7dp"
        android:layout_toStartOf="@+id/MiraBurcCardTop"
        android:src="@drawable/horoscope_detail_card_triangle"
        android:layout_marginEnd="-11dp"
        android:layout_marginBottom="-20dp"
        android:contentDescription="@string/main_menu_mira_triangle"
        android:visibility="invisible">
    </ImageView>

    <!--burc card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/burcCard"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="#1c1444"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        tools:ignore="TextSizeCheck">

        <!--click to get horoscope-->
        <TextView
            android:id="@+id/ClickToGetHoroscopeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai_light"
            android:text="@string/click_to_get_horoscope"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="VisualLintOverlap"
            android:layout_gravity="center"
            android:visibility="visible">
        </TextView>

        <!--burcCardLayout1-->
        <RelativeLayout
            android:id="@+id/burcCardInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="VisualLintBounds"
            android:visibility="invisible">

            <!--selected mode title-->
            <TextView
                android:id="@+id/selectedModeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/select_mode"
                android:textColor="@color/white"
                android:textSize="25dp">
            </TextView>

            <!--general sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/generalSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/loveSign"
                android:animateLayoutChanges="true"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/general"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17dp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/generalSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="15dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_general_card"
                        android:contentDescription="@string/general_sign_card_s_image"
                        android:padding="7dp"
                        android:src="@drawable/selected_mode_general_image">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <!--love sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/loveSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/love"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17dp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loveSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="16dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_love_card"
                        android:contentDescription="@string/love_sign_card_s_image"
                        android:padding="9dp"
                        android:src="@drawable/heart">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <!--career sign card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/careerSign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/selectedModeTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/loveSign"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp"
                tools:ignore="VisualLintBounds">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/career"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17dp">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/careerSignBackground"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#1c1444"
                    app:cardCornerRadius="15dp"
                    tools:ignore="VisualLintBounds">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/selected_mode_career_card"
                        android:contentDescription="@string/career_sign_card_s_image"
                        android:padding="8dp"
                        android:src="@drawable/selected_mode_career_image">

                    </ImageView>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <!--daily button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalDaily"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/selectedModeTitle"
                android:layout_marginStart="30dp"
                android:layout_marginTop="170dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/timeIntervalDailySelectedBG"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/daily_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalDailyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/time_interval_daily"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--weekly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalWeekly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/selectedModeTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/timeIntervalWeeklySelectedBG"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/weekly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalWeeklyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/time_interval_weekly"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--monthly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalMonthly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/timeIntervalDaily"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/timeIntervalMonthlySelectedBG"
                    android:visibility="invisible"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/monthly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalMonthlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/time_interval_monthly"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <!--yearly button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/timeIntervalYearly"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@id/timeIntervalWeekly"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#423E71"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/timeIntervalYearlySelectedBG"
                    android:visibility="invisible"
                    android:background="@drawable/selected_time_interval_card"
                    android:contentDescription="@string/yearly_button_background_image">
                </ImageView>

                <TextView
                    android:id="@+id/timeIntervalYearlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arima_madurai_bold"
                    android:text="@string/time_interval_yearly"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:id="@+id/savedUsersScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeIntervalMonthly"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:scrollbars="none"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/savedUsersLinearContainer"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:id="@+id/addLookupUser"
                        app:cardBackgroundColor="#423E71"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/add_user_icon"
                            android:contentDescription="@string/time_interval_card_add_icon">
                        </ImageView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/addLookupUserBG"
                            android:visibility="invisible"
                            android:background="@drawable/add_lookup_user_card"
                            android:contentDescription="@string/time_interval_card_background"
                            android:src="@drawable/add_user_icon">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!--learn your burc button-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/learnYourBurcButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/timeIntervalMonthly"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="65dp"
                android:background="@drawable/get_horoscope_button_background"
                android:fontFamily="@font/arima_madurai_bold"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="@string/get_your_horoscope"
                android:visibility="invisible">
            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--use/gain coin popup card-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:cardElevation="8dp"
        android:id="@+id/useOrGainCoinMenuCard"
        app:cardBackgroundColor="#C1C1C1"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/useOrGainCoinMenuCardContainerLayout">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/closeUseOrGainCoinMenuCardButton"
                android:background="@drawable/back_arrow"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/sample_description">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useOrGainCoinMenuTitle"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arima_madurai_bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="@string/horoscopetype_timeinterval">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useOrGainCoinMenuCurrentCoinText"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/useOrGainCoinMenuTitle"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/arima_madurai_bold"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="#FDDA0D"
                android:text="@string/sample_coin_amount"
                android:drawableEnd="@drawable/baseline_currency_bitcoin_24">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/UseCoinButton"
                android:background="@drawable/get_horoscope_button_background"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/use_coin"
                android:textAllCaps="false"
                android:gravity="center">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/separatorLine"
                android:layout_below="@+id/UseCoinButton"
                android:layout_marginTop="15dp"
                android:background="@drawable/seperator_line_grey">
            </ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/WatchAdToEarnCoinButton"
                android:background="@drawable/get_horoscope_button_background"
                android:layout_below="@id/separatorLine"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:text="@string/watch_ad_and_earn_coin"
                android:textAllCaps="false"
                android:gravity="center">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--coin amount-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coinAmountContainerLayout"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/coinAmountText"
            android:maxLines="1"
            android:maxLength="5"
            android:gravity="center_vertical"
            android:text="@string/sample_coin_amount"
            android:fontFamily="@font/arima_madurai_bold"
            android:textSize="25dp"
            android:textColor="#FDDA0D">
        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="1dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/coinAmountText"
            android:layout_marginStart="4dp"
            android:src="@drawable/mira_coin"
            android:contentDescription="@string/sample_description">
        </ImageView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/claimCampaignCard"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FFD8D8D8"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:maxLines="5"
                android:gravity="center"
                android:id="@+id/claimCampaignCardText"
                android:textSize="18dp"
                android:fontFamily="@font/arima_madurai_bold"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="@string/campaign_title"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/claimCampaignSeparatorLine"
                android:background="@drawable/seperator_line_grey"
                android:layout_below="@id/claimCampaignCardText"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/sample_description">
            </ImageView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/claimCampaignClaimButton"
                android:layout_below="@id/claimCampaignSeparatorLine"
                android:text="@string/claim"
                android:layout_centerHorizontal="true"
                android:background="#D8D8D8"
                android:gravity="center"
                android:textSize="18dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:textColor="@color/neptune"
                android:fontFamily="@font/arima_madurai_bold"
                android:focusable="true">
            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>