        <shape android:shape="rectangle">
            <solid android:color="#d2d2d2" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:top="2dp" android:left="2dp" android:id="@+id/background_rect">
        <shape android:shape="rectangle">
            <solid android:color="#9a9a9a" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:top="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff " />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
