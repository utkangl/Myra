<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dikdörtgen şeklinde arka plan -->

    <!-- Gölgeli dikdörtgen -->
    <item  android:bottom="6dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#5A488B" /> <!-- Beyaz renkli gölge -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:top="4dp" android:left="3dp" android:id="@+id/background_rect">
        <shape android:shape="rectangle">
            <solid android:color="#804D4D4D" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Üstteki düğme katmanı -->
    <item android:top="1dp" android:bottom="3dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#47386F " />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>