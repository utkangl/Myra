<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dikdörtgen şeklinde arka plan -->

    <!-- Gölgeli dikdörtgen -->
    <item  android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#5A488B" /> <!-- Beyaz renkli gölge -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:top="3dp" android:left="2dp" android:id="@+id/background_rect">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Üstteki düğme katmanı -->
    <item android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#47386F " />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
